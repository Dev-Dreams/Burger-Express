<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- sets the character encoding for the webpage-->
    <meta charset="UTF-8" />
    <!-- sets the viewport for correct display on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- title of the page displayed in the browser tab -->
    <title>Burger Express. Order confirmation</title>
    <!-- connects Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- connects to Google Fonts to include the Roboto font -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap"
      rel="stylesheet"
    />
    <!-- connects icons Material Icons to display icon -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <!-- connects the main CSS for custom styles -->
    <link rel="stylesheet" href="css/main.css" />
  </head>
  <body>
    <!-- inserts a page header (EJS template) -->
    <header><%- include('header') %></header>
    <!-- main content area starts here -->
    <main>
      <!-- bootstrap container class for responsive layout   -->
      <div class="container mt-4">
        <!-- main heading -->
        <h1>Our Menu</h1>
        <div class="row my-4">
          <!-- iterates through the products array to display each product -->
          <% products.forEach(function(product) { %>
          <!--   https://getbootstrap.com/docs/5.3/components/card/ -->
          <div class="col-12 col-md-6 col-lg-4 my-2">
            <!-- bootstrap "Card" component for each product -->
            <div class="card h-100 shadow-sm rounded my-card">
              <!-- displays the product image -->
              <img
                src="<%= product.image_url %>"
                class="card-img-top"
                alt="<%= product.name %>"
              />
              <div class="card-body d-flex flex-column">
                <!-- displays the product name -->
                <h5 class="card-title"><%= product.name %></h5>
                <!-- displays the product description -->
                <p class="card-text flex-grow-1"><%= product.description %></p>
                <div
                  class="d-flex justify-content-between align-items-center mt-auto"
                >
                  <!-- displays the product price -->
                  <p class="card-price mb-0 fw-bold fs-3 text-danger">
                    $<%= product.price.toFixed(2) %>
                  </p>

                  <!-- button "Add to Cart" with onclick event to add product to cart -->
                  <button
                    onclick="addToCart('<%= product.id %>', '<%= product.name %>', '<%= product.price %>')"
                    class="btn btn-outline-primary"
                  >
                    Add to Cart
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
    <!-- end of main content area -->
    <!-- footer starts here -->
    <footer class="bg-dark text-light py-3 mt-4">
      <!-- inserts a page footer (EJS template) -->
      <%- include('footer') %>
    </footer>
    <!-- script for adding a product to the cart -->
    <script src="/js/menu.js"></script>
    <!-- connects the Bootstrap JavaScript library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
