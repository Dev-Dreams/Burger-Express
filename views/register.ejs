<!DOCTYPE html> 
<html lang="en">
  <head>
    <!-- set the character encoding for the page -->
    <meta charset="UTF-8" />
    <!-- set the viewport for proper display on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- title of the page shown in the browser tab -->
    <title>Burger Express - Register</title>
    <!-- link to Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- link to Google Fonts for the Roboto font -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap"
      rel="stylesheet"
    />
    <!-- link to Material Icons for icons display -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <!-- link to main CSS file for custom styles -->
    <link rel="stylesheet" href="css/main.css" />
  </head>
  <body>
    <!-- insert page header (EJS template) -->
    <header><%- include('header') %></header>
    <!-- main content area starts -->
    <main class="container mt-4">
      <div class="row">
        <!-- left column with main heading and description -->
        <div class="col-md-3">
          <h1>Register</h1>
          <p>Create a new account.</p>

          <!-- display error messages if any -->
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <!-- display success message if registration is successful -->
          <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success"><%= success %></div>
          <% } %>
        </div>
        <!-- right column with registration form -->
        <div class="col-md-6">
          <!-- form that sends user data to the server using POST method -->
          <form action="/register" method="post">
            <div class="mb-3">
              <!-- username input field -->
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required />
            </div>
            <div class="mb-3">
              <!-- password input field -->
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <!-- button to submit the registration form -->
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </div>
      </div>
    </main>
    <!-- footer section starts -->
    <footer class="bg-dark text-light py-3 mt-4">
      <!-- insert page footer (EJS template) -->
      <%- include('footer') %>
    </footer>
    <!-- link to Bootstrap JavaScript library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
