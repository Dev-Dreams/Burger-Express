<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- sets the character encoding for the webpage-->
    <meta charset="UTF-8" />
    <!-- sets the viewport for correct display on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- title of the page displayed in the browser tab -->
    <title>Burger Express. Order confirmation</title>
    <!-- connects Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- connects to Google Fonts to include the Roboto font -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap"
      rel="stylesheet"
    />
    <!-- connects icons Material Icons to display icon -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <!-- connects the main CSS for custom styles -->
    <link rel="stylesheet" href="css/main.css" />
  </head>
  <body>
    <!-- inserts a page header (EJS template) -->
    <header><%- include('header') %></header>
    <!-- main content area starts here -->
    <main class="container mt-4">
      <!-- bootstrap "Card" component to display message -->
      <div class="card shadow-sm p-4 mb-4 bg-white">
        <div class="card-body text-center">
          <!-- confirmation message -->
          <h1 class="card-title">Thank You for Your Order!</h1>
          <!-- horizontal line -->
          <hr />
          <div class="pt-2">
            <!-- button "Return to Home", with onclick event to trigger navigation to the home page -->
            <a href="/" class="btn btn-primary">Return to Home</a>
          </div>
        </div>
      </div>
      <!-- end of bootstrap "Card" component -->
    </main>
    <!-- footer starts here -->
    <footer class="bg-dark text-light py-3 mt-4">
      <!-- inserts a page footer (EJS template) -->
      <%- include('footer') %>
    </footer>
    <!-- connects the Bootstrap JavaScript library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
